{
  "name": "ankabot-api",
	"publisher": "linkpad",
  "displayName": "AnkaBot API",
  "description": "AnkaBot Lua API",
	"icon": "image/ankabot-logo.png",
  "version": "0.0.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/linkpad/vscode-ankabot-api"
	},
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
		"Linters",
		"Programming Languages",
		"Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
	"keywords": [
		"Lua",
		"AnkaBot"
	],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  },
	"extensionDependencies": [
		"sumneko.lua"
	]
}
